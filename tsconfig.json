{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "keyofStringsOnly": true,
        "skipLibCheck": true,
        "baseUrl": ".", // all paths are relative to the baseUrl
        "paths": {
            "@/*": ["src/*"],
        }
    },
    "typeRoots": ["node_modules/@types", "src/@type"],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "./node_modules/**/*"
    ],
    "include": ["./src/**/*", "@type"]
}